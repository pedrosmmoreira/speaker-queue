<%= form_for @talk, :html => { :class => "form-horizontal talk" } do |f| %>

  <% if @talk.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@talk.errors.count, "error") %> prohibited this talk from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @talk.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control', required: true %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control', required: true %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tag_list, :class => 'form-control', required: true %>
    </div>
    <%=f.error_span(:tag_list) %>
  </div>
  <div class="form-group">
    <%= f.label :duration, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :duration, :class => 'form-control', max: 30, required: true %>
    </div>
    <%=f.error_span(:duration) %>
  </div>
  <div class="form-group">
    <%= f.label :speaker, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :speaker, :class => 'form-control', required: true %>
    </div>
    <%=f.error_span(:speaker) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                talks_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
