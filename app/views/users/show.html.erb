<div class="container">
  <p>
    <%= image_tag @user.avatar_url(:normal).to_s %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <strong>Avatar URL:</strong>
    <%= @user.avatar %>
  </p>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>